# AI Payphone Configuration
# Copy this to .env and customize

# Debug mode
DEBUG=false
LOG_LEVEL=INFO

# AudioSocket Server
AUDIO_AUDIOSOCKET_HOST=0.0.0.0
AUDIO_AUDIOSOCKET_PORT=9092

# Speech-to-Text (faster-whisper)
STT_MODEL_NAME=distil-whisper/distil-large-v3
STT_DEVICE=cpu
STT_COMPUTE_TYPE=int8
STT_LANGUAGE=en

# Language Model (Ollama)
LLM_HOST=http://localhost:11434
LLM_MODEL=qwen2.5:3b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=150
LLM_TIMEOUT=10.0

# Text-to-Speech (Kokoro)
TTS_MODEL_PATH=kokoro-v1.0.onnx
TTS_VOICES_PATH=voices-v1.0.bin
TTS_VOICE=af_bella
TTS_SPEED=1.0

# Voice Activity Detection
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MIN_SILENCE_DURATION_MS=500

# Timeouts
TIMEOUT_SILENCE_PROMPT=10
TIMEOUT_SILENCE_GOODBYE=30
TIMEOUT_MAX_CALL_DURATION=1800
